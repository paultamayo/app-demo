--/subsystem=elytron/simple-role-decoder=from-roles-attribute:add(attribute=Roles)
-- Add Custom security realm

/subsystem=elytron/custom-realm=WebServiceRealm:add(module=com.paultamayo.auth, class-name=com.paultamayo.auth.WebServiceRealm)
/subsystem=elytron/security-domain=WebServiceDomain:add(realms=[{realm=WebServiceRealm}],default-realm=WebServiceRealm,permission-mapper=default-permission-mapper)
/subsystem=elytron/http-authentication-factory=web-service-http-auth:add(http-server-mechanism-factory=global,security-domain=WebServiceDomain,mechanism-configurations=[{mechanism-name=BASIC,mechanism-realm-configurations=[{realm-name=WebServiceApplicationDomain}]}])
/subsystem=undertow/application-security-domain=WebServiceApplicationDomain:add(security-domain=WebServiceDomain)
